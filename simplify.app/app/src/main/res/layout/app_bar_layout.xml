<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_top_nav"
    android:elevation="8dp">

    <LinearLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/img_profile"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_10sdp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/mainProfileButton"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@raw/guest"
                app:shapeAppearanceOverlay="@style/circleImageView"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:indeterminateOnly="false"
                android:progress="58"
                android:progressDrawable="@drawable/home_profile_loading"
                android:rotation="-90" />
        </FrameLayout>

        <Button
            android:id="@+id/home_ac1"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:background="@drawable/button_nothing"
            android:fontFamily="@font/circular_bold"
            android:orientation="vertical"
            app:rippleColor="@color/transparent"
            android:text="@string/home_all"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/home_ac2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@drawable/button_nothing"
            android:fontFamily="@font/circular_bold"
            android:orientation="vertical"
            app:rippleColor="@color/transparent"
            android:text="@string/home_notes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/home_ac3"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@drawable/button_nothing"
            android:fontFamily="@font/circular_bold"
            android:orientation="vertical"
            app:rippleColor="@color/transparent"
            android:text="@string/home_assistant"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

        <Button
            android:id="@+id/home_ac4"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:background="@drawable/button_nothing"
            android:fontFamily="@font/circular_bold"
            android:orientation="vertical"
            app:rippleColor="@color/transparent"
            android:text="@string/home_tasks"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</com.google.android.material.appbar.AppBarLayout>
