<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:layout_marginEnd="@dimen/_16sdp"
    android:elevation="@dimen/_5sdp"
    android:backgroundTint="@color/secondary"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    android:layout_height="@dimen/_40sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/secondary">

        <View
            android:id="@+id/main_view_glowed"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_5sdp"
            android:elevation="10dp"
            android:outlineSpotShadowColor="@color/red"
            android:background="@drawable/glow_effect_red"
            tools:targetApi="p" />

        <CheckBox
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:button="@drawable/rounded_checkbox_background"
            android:id="@+id/main_checked_task" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Model task title used as a model in post"
            android:layout_gravity="center"
            android:fontFamily="@font/circular_medium"
            android:singleLine="true"
            android:textSize="@dimen/_14ssp"
            android:id="@+id/main_title"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="@color/white"/>



    </LinearLayout>
</androidx.cardview.widget.CardView>